<% summary = @summary %>
<% currency_unit = summary.dominant_currency %>
<% total_transactions = summary.total_transactions %>
<% lifetime_spend_display = currency_amount(summary.lifetime_spend_cents, unit: currency_unit) %>
<% current_month_spend_display = currency_amount(summary.current_month_spend_cents, unit: currency_unit) %>
<% average_transaction_display = total_transactions.positive? ? currency_amount(summary.average_transaction_cents, unit: currency_unit) : "—" %>
<% trend = summary.recent_trend %>
<% trend_delta = trend[:current] - trend[:previous] %>
<% trend_pct = trend[:previous].positive? ? ((trend_delta.to_f / trend[:previous]) * 100).round : nil %>
<% latest_sync_at = summary.latest_sync_at %>
<% type_breakdown = summary.transaction_type_breakdown %>

<div class="min-h-screen bg-[#efe6d7]">
  <div class="mx-auto max-w-6xl space-y-6 px-5 py-8 md:py-12">
    <div class="rounded-3xl border-2 border-black bg-[#fdebd0] p-6 shadow-[12px_12px_0_#000]">
      <div class="flex flex-wrap items-start justify-between gap-4">
        <div class="space-y-2">
          <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500">Command center</p>
          <h1 class="text-3xl font-black text-slate-900 md:text-5xl">Dashboard</h1>
          <p class="max-w-2xl text-sm text-slate-700">
            High-level telemetry for inbox ingestion and cash outflows. Everything on this screen is scoped to your account and recalculates
            with every sync.
          </p>
        </div>
        <div class="rounded-full border-2 border-black bg-white px-6 py-2 text-center text-xs font-semibold uppercase tracking-[0.3em] text-slate-700 shadow-[0_4px_0_#000]">
          <span class="text-base font-black text-slate-900"><%= number_with_delimiter(total_transactions) %></span>
          <span class="ml-1 text-[11px]">transactions</span>
        </div>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-4 md:grid-cols-3">
        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[6px_6px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">Lifetime spend</p>
          <p class="mt-2 text-3xl font-black text-slate-900"><%= lifetime_spend_display %></p>
          <p class="text-sm text-slate-500">Expense-classified transactions only</p>
        </div>

        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[6px_6px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500"><%= summary.current_month_label %> spend</p>
          <p class="mt-2 text-3xl font-black text-slate-900"><%= current_month_spend_display %></p>
          <p class="text-sm text-slate-500"><%= number_with_delimiter(summary.current_month_transactions) %> expense transactions this month</p>
        </div>

        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[6px_6px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">7-day trend</p>
          <div class="mt-2 flex items-end justify-between">
            <div>
              <p class="text-3xl font-black text-slate-900"><%= number_with_delimiter(trend[:current]) %></p>
              <p class="text-sm text-slate-500">expense tx last 7 days</p>
            </div>
            <div class="text-right">
              <% if trend[:previous].positive? %>
                <p class="text-sm font-semibold <%= trend_delta >= 0 ? 'text-emerald-600' : 'text-rose-600' %>">
                  <%= trend_delta >= 0 ? "▲" : "▼" %>
                  <%= trend_pct %>% vs prior week
                </p>
              <% elsif trend[:current].positive? %>
                <p class="text-sm font-semibold text-emerald-600">▲ New activity</p>
              <% else %>
                <p class="text-sm font-semibold text-slate-500">No data yet</p>
              <% end %>
              <p class="text-xs text-slate-500"><%= number_with_delimiter(trend[:previous]) %> previous</p>
            </div>
          </div>
        </div>
      </div>

      <% if type_breakdown.present? %>
        <div class="mt-6 flex flex-wrap gap-2">
          <% type_breakdown.each do |entry| %>
            <span class="inline-flex items-center gap-2 rounded-full border-2 border-black bg-white px-4 py-1 text-xs font-semibold uppercase tracking-wide text-slate-700 shadow-[0_3px_0_#000]">
              <span><%= entry[:label] %></span>
              <span class="rounded-full bg-[#fdebd0] px-2 py-0.5 text-[11px] font-black text-slate-900"><%= entry[:count] %> • <%= entry[:percentage] %>%</span>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 gap-6 xl:grid-cols-3">
      <div class="space-y-6 xl:col-span-2">
        <div class="rounded-3xl border-2 border-black bg-white p-5 shadow-[12px_12px_0_#000]">
          <div class="flex flex-wrap items-center justify-between gap-3">
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Spending mix</p>
              <p class="text-sm text-slate-600">Current month categories vs last 30 days of merchant activity</p>
            </div>
            <div class="rounded-full border-2 border-black bg-[#fdebd0] px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-700">
              Avg ticket <%= average_transaction_display %>
            </div>
          </div>

          <div class="mt-5 grid grid-cols-1 gap-5 md:grid-cols-2">
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">Top categories</p>
              <div class="mt-3 space-y-2">
                <% if summary.top_categories.present? %>
                  <% summary.top_categories.each do |entry| %>
                    <div class="flex items-center justify-between rounded-2xl border-2 border-black bg-[#efe6d7] px-4 py-3 text-sm shadow-[0_4px_0_#000]">
                      <span class="font-semibold text-slate-800"><%= entry[:label] %></span>
                      <span class="text-slate-900"><%= currency_amount(entry[:amount_cents], unit: currency_unit) %></span>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-sm text-slate-500">No categorized spend yet this month.</p>
                <% end %>
              </div>
            </div>

            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500">Top merchants (30d)</p>
              <div class="mt-3 space-y-2">
                <% if summary.top_merchants.present? %>
                  <% summary.top_merchants.each do |entry| %>
                    <div class="flex items-center justify-between rounded-2xl border-2 border-black bg-[#efe6d7] px-4 py-3 text-sm shadow-[0_4px_0_#000]">
                      <div>
                        <p class="font-semibold text-slate-900"><%= entry[:label] %></p>
                        <p class="text-xs uppercase tracking-wide text-slate-500">last 30 days</p>
                      </div>
                      <span class="text-slate-900"><%= currency_amount(entry[:amount_cents], unit: currency_unit) %></span>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-sm text-slate-500">We need more merchant data to populate this view.</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="rounded-3xl border-2 border-black bg-white p-5 shadow-[12px_12px_0_#000]">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Inbox ingestion</p>
            <p class="text-sm text-slate-600">Monitoring connected accounts</p>
          </div>
          <span class="rounded-full border-2 border-black bg-[#fdebd0] px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-700">
            <%= summary.connected_accounts_count %> accounts
          </span>
        </div>

        <div class="mt-4 space-y-3">
          <div class="flex items-center justify-between rounded-2xl border-2 border-black bg-[#efe6d7] px-4 py-3 shadow-[0_4px_0_#000]">
            <div>
              <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Total emails</p>
              <p class="text-2xl font-black text-slate-900"><%= number_with_delimiter(summary.total_emails) %></p>
            </div>
            <p class="text-sm text-slate-500"><%= number_with_delimiter(summary.processed_emails) %> processed</p>
          </div>

          <div class="flex items-center justify-between rounded-2xl border-2 border-black bg-white px-4 py-3 shadow-[0_4px_0_#000]">
            <div>
              <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Awaiting parse</p>
              <p class="text-2xl font-black text-amber-600"><%= number_with_delimiter(summary.pending_emails) %></p>
            </div>
            <p class="text-sm text-slate-500"><%= number_with_delimiter(summary.emails_without_transactions) %> w/o transactions</p>
          </div>

          <div class="rounded-2xl border-2 border-black bg-[#d1fae5] px-4 py-3 shadow-[0_4px_0_#000]">
            <p class="text-xs uppercase tracking-[0.35em] text-emerald-700">Last sync</p>
            <% if latest_sync_at.present? %>
              <span class="text-lg font-semibold text-emerald-900">
                <%= time_ago_in_words(latest_sync_at) %> ago
              </span>
                <p class="text-xs text-emerald-800">( <%= l(latest_sync_at, format: :long) %> )</p>
            <% else %>
              <p class="text-sm text-slate-600">No sync activity logged yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="rounded-3xl border-2 border-black bg-white p-5 shadow-[12px_12px_0_#000]">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Account sync status</p>
          <p class="text-sm text-slate-600">Latest successful import per mailbox</p>
        </div>
        <%= link_to emails_path,
            class: "inline-flex items-center gap-2 rounded-2xl border-2 border-black bg-amber-300 px-4 py-2 text-sm font-semibold text-slate-900 shadow-[0_4px_0_#000] transition hover:-translate-y-0.5",
            data: { turbo_frame: "_top" } do %>
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-6-6 6 6-6 6" />
          </svg>
          Inbox
        <% end %>
      </div>

      <% if summary.connected_accounts_count.zero? %>
        <p class="mt-6 rounded-2xl border-2 border-dashed border-black bg-[#efe6d7] px-4 py-6 text-center text-sm text-slate-600">
          Connect an email account to start ingesting transactions.
        </p>
      <% else %>
        <div class="mt-6 overflow-hidden rounded-2xl border-2 border-black">
          <table class="w-full divide-y-2 divide-black bg-[#fefcf7]">
            <thead class="bg-[#fdebd0] text-left text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">
              <tr>
                <th class="px-4 py-3">Account</th>
                <th class="px-4 py-3">Provider</th>
                <th class="px-4 py-3">Status</th>
                <th class="px-4 py-3 text-right">Last sync</th>
              </tr>
            </thead>
            <tbody class="text-sm text-slate-800">
              <% summary.latest_sync_by_account.each do |row| %>
                <% account = row[:account] %>
                <% last_synced_at = row[:last_synced_at] %>
                <tr class="odd:bg-white even:bg-[#fdf6ea]">
                  <td class="px-4 py-3 font-semibold text-slate-900"><%= account.email_address %></td>
                  <td class="px-4 py-3 capitalize"><%= account.provider %></td>
                  <td class="px-4 py-3">
                    <% status_label = account.status.to_s.presence || "Unknown" %>
                    <% status_green = status_label.downcase == "active" %>
                    <span class="inline-flex items-center rounded-full border-2 border-black px-3 py-0.5 text-xs font-semibold uppercase tracking-wide <%= status_green ? 'bg-emerald-200 text-emerald-800' : 'bg-amber-200 text-amber-700' %>">
                      <%= status_label.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-right">
                    <% if last_synced_at.present? %>
                      <span class="font-semibold text-slate-900"><%= time_ago_in_words(last_synced_at) %> ago</span>
                      <p class="text-xs text-slate-500"><%= l(last_synced_at, format: :short) %></p>
                    <% else %>
                      <span class="text-xs text-slate-500">Awaiting first sync</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
