<% subject = @email.subject.presence || "(no subject)" %>
<% transaction = @email.financial_transaction %>
<% sent_at_primary = @email.sent_at&.in_time_zone&.strftime("%b %d, %Y · %I:%M %p") %>
<% sent_relative = @email.sent_at.present? ? time_ago_in_words(@email.sent_at) : nil %>
<% status_label = @email.processed? ? "Processed" : "Pending" %>
<% status_styles = @email.processed? ? "bg-emerald-300 text-emerald-900" : "bg-yellow-300 text-yellow-900" %>
<% sanitized_body = sanitized_email_html(@email) %>

<div class="min-h-screen bg-[#efe6d7]">
  <div class="mx-auto max-w-5xl space-y-6 px-5 py-8 md:py-12">
    <div class="flex flex-wrap items-center gap-3">
      <%= link_to emails_path,
          class: "inline-flex items-center gap-2 rounded-2xl border-2 border-black bg-white px-4 py-2 font-semibold text-slate-900 shadow-[0_5px_0_#000] transition hover:-translate-y-0.5" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        <span>Back to inbox</span>
      <% end %>
      <p class="text-sm font-medium text-slate-500">Email ID • <%= @email.id %></p>
    </div>

    <div class="space-y-5 rounded-3xl border-2 border-black bg-[#fdebd0] p-6 shadow-[10px_10px_0_#000]">
      <div class="flex flex-wrap items-start gap-4">
        <div class="min-w-0 flex-1 space-y-1">
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Subject</p>
          <h1 class="text-2xl font-black leading-tight text-slate-900 md:text-4xl"><%= subject %></h1>
        </div>
        <span class="inline-flex items-center rounded-full border-2 border-black px-4 py-1 text-xs font-semibold uppercase tracking-wide shadow-[0_3px_0_#000] <%= status_styles %>">
          <%= status_label %>
        </span>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[5px_5px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">From</p>
          <p class="mt-1 break-words font-semibold text-slate-900"><%= @email.from_address.presence || "Unknown sender" %></p>
        </div>
        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[5px_5px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">To</p>
          <p class="mt-1 break-words font-semibold text-slate-900"><%= @email.to_address.presence || "Unknown recipient" %></p>
        </div>
        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[5px_5px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Sent</p>
          <p class="mt-1 font-semibold text-slate-900"><%= sent_at_primary || "Not available" %></p>
          <p class="text-sm text-slate-500"><%= sent_relative.present? ? "#{sent_relative} ago" : "Timestamp not provided" %></p>
        </div>
        <div class="rounded-2xl border-2 border-black bg-white p-4 shadow-[5px_5px_0_#000]">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Message ID</p>
          <p class="mt-1 break-words font-mono text-sm text-slate-700"><%= @email.message_id.presence || "Not available" %></p>
        </div>
      </div>
    </div>

    <% if @email.snippet.present? %>
      <div class="rounded-3xl border-2 border-black bg-white p-6 shadow-[8px_8px_0_#000]">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">Snippet</p>
        <p class="mt-2 whitespace-pre-wrap text-base text-slate-700"><%= @email.snippet %></p>
      </div>
    <% end %>

    <div class="rounded-3xl border-2 border-dashed border-black bg-white/80 p-6 shadow-[8px_8px_0_#000]">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">Linked transaction</p>
          <% if transaction.present? %>
            <p class="mt-2 text-xl font-black text-slate-900"><%= transaction.merchant.presence || "Unknown merchant" %></p>
            <p class="text-sm text-slate-600">
              <% currency = transaction.currency.presence || "₹" %>
              <% amount_display = transaction.amount_cents.present? ? number_to_currency(transaction.amount_cents / 100.0, unit: currency) : "—" %>
              <%= amount_display %> • <%= transaction.transaction_date || transaction.created_at.to_date %>
            </p>
          <% else %>
            <p class="mt-2 text-lg font-semibold text-slate-800">No transaction yet</p>
            <p class="text-sm text-slate-500">Once a transaction is extracted from this email, it will appear here.</p>
          <% end %>
        </div>
        <% if transaction.present? %>
          <%= link_to "Open transaction",
              transaction_path(transaction),
              class: "inline-flex items-center gap-2 rounded-2xl border-2 border-black bg-amber-300 px-4 py-2 font-semibold text-slate-900 shadow-[0_5px_0_#000] transition hover:-translate-y-0.5" %>
        <% end %>
      </div>
    </div>

    <div class="rounded-3xl border-2 border-black bg-white p-6 shadow-[12px_12px_0_#000]">
      <div class="flex flex-wrap items-center justify-between gap-4 border-b border-black/10 pb-4">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">Message body</p>
          <p class="text-sm text-slate-500">
            <%= sanitized_body.present? ? "Showing HTML content" : (@email.body_text.present? ? "Showing plain text fallback" : "No content available") %>
          </p>
        </div>
        <% if @email.thread_id.present? %>
          <div class="rounded-full border-2 border-black bg-[#fdebd0] px-4 py-1 text-xs font-semibold uppercase tracking-wide shadow-[0_3px_0_#000]">
            Thread • <%= @email.thread_id %>
          </div>
        <% end %>
      </div>

      <div class="mt-5 text-base leading-7 text-slate-800">
        <% if sanitized_body.present? %>
          <div class="prose max-w-none prose-slate">
            <%= sanitized_body %>
          </div>
        <% elsif @email.body_text.present? %>
          <pre class="whitespace-pre-wrap rounded-2xl border border-slate-200 bg-slate-50 p-4 font-mono text-sm text-slate-800"><%= @email.body_text %></pre>
        <% else %>
          <p class="italic text-slate-500">The sender did not include any readable content.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>