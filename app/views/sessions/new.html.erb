<div class="min-h-screen bg-[#efe6d7] flex items-center justify-center p-6">
  <div class="w-full max-w-xl">
    <% if flash[:alert].present? %>
      <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-rose-700 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice].present? %>
      <div class="mb-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-emerald-700 text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="relative rounded-2xl bg-white shadow-[8px_8px_0_0_rgba(0,0,0,0.2)] ring-1 ring-black/5">
      <div class="p-8 md:p-10">
        <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight mb-2">Welcome Back</h1>
        <p class="text-slate-500 text-sm md:text-[0.95rem]">
          Please sign in to your account.
        </p>

        <%= form_with url: session_path, html: { class: "mt-8 space-y-6" } do |form| %>
          <div>
            <label class="block text-sm font-semibold text-slate-700">Username</label>
            <%= form.email_field :email_address,
                  required: true,
                  autofocus: true,
                  autocomplete: "username",
                  placeholder: "Enter username",
                  value: params[:email_address],
                  class: "mt-2 w-full rounded-lg border-2 border-black bg-white/80 px-4 py-3 text-sm placeholder-slate-400 shadow-[0_6px_0_#000] focus:outline-none focus:ring-0 focus:shadow-[0_8px_0_#000] transition" %>
          </div>

          <div>
            <label class="block text-sm font-semibold text-slate-700">Password</label>
            <%= form.password_field :password,
                  required: true,
                  autocomplete: "current-password",
                  maxlength: 72,
                  placeholder: "Enter password",
                  class: "mt-2 w-full rounded-lg border-2 border-black bg-white/80 px-4 py-3 text-sm placeholder-slate-400 shadow-[0_6px_0_#000] focus:outline-none focus:ring-0 focus:shadow-[0_8px_0_#000] transition" %>
          </div>

          <div>
            <%= form.submit "Login",
                  class: "w-full rounded-xl bg-rose-500 px-4 py-3 text-white font-semibold shadow-[0_8px_0_#000] hover:bg-rose-600 active:bg-rose-700 active:translate-y-[2px] active:shadow-[0_6px_0_#000] transition" %>
          </div>
        <% end %>

        <div class="mt-6 text-center">
          <%= link_to "Forgot password?", new_password_path, class: "text-sm text-slate-600 hover:text-slate-900 underline underline-offset-2" %>
        </div>
      </div>
    </div>
  </div>
</div>
